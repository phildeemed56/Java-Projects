<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectfiles.control.RecipientController">
   <children>
      <VBox fx:id="recipientVBox" prefHeight="500.0" prefWidth="700.0">
         <children>
            <Label fx:id="recipientInformationLabel" text="Recipient Information">
               <font>
                  <Font size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="200.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="firstNameTextField" maxHeight="25.6" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="firstNameLabel" text="First Name:">
               <VBox.margin>
                  <Insets left="20.0" top="-25.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="lastNameLabel" text="Last Name:">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="lastNameTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-20.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="emailLabel" text="Email:">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="emailTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-25.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="phoneNumberLabel" text="Phone Number:">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="phoneNumberTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-22.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="countryLabel" text="Country:">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="countryTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-22.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="cityLabel" text="City:">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="cityTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-22.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="addressLabel" text="Address:">
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="addressTextField" maxWidth="300.0">
               <VBox.margin>
                  <Insets left="150.0" top="-22.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="statusLabel" prefHeight="30.0" prefWidth="634.0">
               <VBox.margin>
                  <Insets left="30.0" top="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinueButtonAction" text="Continue">
               <VBox.margin>
                  <Insets left="600.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetButtonAction" text="Reset">
               <VBox.margin>
                  <Insets left="300.0" top="-25.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction" prefHeight="26.0" prefWidth="50.0" text="Back">
               <VBox.margin>
                  <Insets left="20.0" top="-25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
