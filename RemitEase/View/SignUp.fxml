<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectfiles.control.SignUpController">
    <children>
        <VBox prefHeight="600.0" prefWidth="700.0" spacing="10">
            <padding>
                <Insets bottom="20" left="50" right="50" top="20" />
            </padding>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Create an Account" />
            <HBox spacing="10">
                <Label minWidth="100" text="First Name:" />
                <TextField fx:id="firstNameTextField" maxWidth="200.0" />
                <Label fx:id="errorFirstName" prefHeight="18.0" prefWidth="323.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Last Name:" />
                <TextField fx:id="lastNameTextField" maxWidth="200.0" />
                <Label fx:id="errorLastName" prefHeight="18.0" prefWidth="324.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="User ID:" />
                <TextField fx:id="userIDTextField" maxWidth="200.0" />
                <Label fx:id="errorUserID" prefHeight="18.0" prefWidth="328.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Password:" />
                <TextField fx:id="passwordTextField" maxWidth="200.0" />
                <Label fx:id="errorPassword" prefHeight="18.0" prefWidth="323.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Repeat Password:" />
                <TextField fx:id="repeatPasswordTextField" maxWidth="200.0" />
                <Label fx:id="errorRepeatPassword" prefHeight="18.0" prefWidth="319.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Email:" />
                <TextField fx:id="emailTextField" maxWidth="200.0" />
                <Label fx:id="errorEmail" prefHeight="18.0" prefWidth="333.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Phone Number:" />
                <TextField fx:id="phoneNumberTextField" maxWidth="200.0" />
                <Label fx:id="errorPhoneNumber" prefHeight="18.0" prefWidth="324.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Country:" />
                <TextField fx:id="countryTextField" maxWidth="200.0" />
                <Label fx:id="errorCountry" prefHeight="18.0" prefWidth="326.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="Address:" />
                <TextField fx:id="addressTextField" maxWidth="200.0" />
                <Label fx:id="errorAddress" prefHeight="18.0" prefWidth="327.0" textFill="red" />
            </HBox>
            <HBox spacing="10">
                <Label minWidth="100" text="City:" />
                <TextField fx:id="cityTextField" maxWidth="200.0" />
                <Label fx:id="errorCity" prefHeight="18.0" prefWidth="319.0" textFill="red" />
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20">
                <Button fx:id="signUpButton" minWidth="100" onAction="#openLoginPage" text="Sign Up" />
                <Button fx:id="resetButton" minWidth="100" onAction="#resetFields" text="Reset" />
                <Button fx:id="backButton" minWidth="100" onAction="#openWelcomePage" text="Back" />
            </HBox>
            <Label fx:id="statusLabel" maxWidth="700" textFill="red" wrapText="true" />
        </VBox>
    </children>
</AnchorPane>
